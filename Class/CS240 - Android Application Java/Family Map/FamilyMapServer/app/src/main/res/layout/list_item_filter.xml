<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="?android:listSeparatorTextViewStyle">

    <Switch
        android:id="@+id/list_item_filter_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="10dp" />

    <TextView
        android:id="@+id/list_item_filter_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="18dp"
        android:paddingTop="8dp"
        android:paddingLeft="8dp"
        tools:text="Filter Type"/>

    <TextView
        android:id="@+id/list_item_filter_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:layout_below="@id/list_item_filter_type"
        android:paddingLeft="8dp"
        android:paddingBottom="8dp"
        tools:text="FILTER DESCRIPTION"/>

</RelativeLayout>